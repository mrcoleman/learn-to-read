{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
